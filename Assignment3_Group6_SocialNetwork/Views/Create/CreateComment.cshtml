@{
    ViewData["Title"] = "Create Comment";
}
@model CommentViewModel


<div class="row">
    <div class="col-md-6">
        <form asp-action="CreateComment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentAuthorId" />
            <input type="hidden" asp-for="PostAuthorId" />
            <input type="hidden" asp-for="PostId" />
            <input type="hidden" asp-for="QueryType" />
            <input type="hidden" asp-for="WallOwnerId" />
            <div class="form-group">
                <label asp-for="Comment" class="control-label"></label>
                <input asp-for="Comment" class="form-control" />
                <span asp-validation-for="Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@if (Model.QueryType == "Feed")
{
    <a asp-controller="Query" asp-action="Feed" asp-route-logged_in_user_id="@Model.CommentAuthorId" asp>Cancel...</a>
}
else
{
    <a asp-controller="Query" asp-action="Wall" asp-route-user_id="@Model.WallOwnerId" asp-route-guest_id="@Model.CommentAuthorId" asp>Cancel...</a>
}
