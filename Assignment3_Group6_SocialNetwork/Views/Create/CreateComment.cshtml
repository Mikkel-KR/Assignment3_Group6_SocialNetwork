@{
    ViewData["Title"] = "Create Comment";
}
@model CommentViewModel


<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateComment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CommentAuthorId" />
            <input type="hidden" asp-for="PostAuthorId" />
            <input type="hidden" asp-for="PostId" />
            <div class="form-group">
                <label asp-for="Comment.Content" class="control-label"></label>
                <input asp-for="Comment.Content" class="form-control" />
                <span asp-validation-for="Comment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Post Comment" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
