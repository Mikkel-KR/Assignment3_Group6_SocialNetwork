@{
    ViewData["Title"] = "Publish Post";
}
@using Assignment3_Group6_SocialNetwork.ViewModels
@model Assignment3_Group6_SocialNetwork.ViewModels.PostViewModel

<h2>Create new post for: @Model.UserName</h2>


<div class="row">
    <div class="col-md-6">
        <form asp-action="PublishPost" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AuthorId" />
            <input type="hidden" asp-for="UserName" />
            <input type="hidden" asp-for="SelectedCircle.Key" />
            <div class="form-group">
                <label asp-for="SelectedCircle" class="control-label"></label>
                <select asp-for="SelectedCircle" class="form-control" asp-items="Model.Circles"></select>
                <span asp-validation-for="SelectedCircle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostType" class="control-label"></label>
                <select asp-for="PostType" class="form-control" asp-items="PostTypes.GetPostTypes()"></select>
                <span asp-validation-for="PostType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PostContent" class="control-label"></label>
                <input asp-for="PostContent" class="form-control" />
                <span asp-validation-for="PostContent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="checkbox" asp-for="IsPublic" />
                <label asp-for="IsPublic">Public Post</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
