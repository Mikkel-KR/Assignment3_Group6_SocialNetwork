@{
    ViewData["Title"] = "Publish Post";
}
@using Assignment3_Group6_SocialNetwork.ViewModels
@model Assignment3_Group6_SocialNetwork.ViewModels.PostViewModel

<h2>Create new post for: @Model.UserName</h2>


<div class="row">
    <div class="col-md-4">
        <form asp-action="PublishPost" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.AuthorId" />
            <div class="form-group">
                <label asp-for="Post.CircleId" class="control-label"></label>
                <select asp-for="Post.CircleId" class="form-control" asp-items="Model.Circles."></select>
                <span asp-validation-for="Post.CircleId" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Post.Type" class="control-label"></label>
                <select asp-for="Post.Type" class="form-control" asp-items="PostTypes.GetPostTypes()"></select>
                <span asp-validation-for="Post.Type" class="text-danger"></span>
                </div>
            <div class="form-group">
                <label asp-for="Post.Content" class="control-label"></label>
                <input asp-for="Post.Content" class="form-control" />
                <span asp-validation-for="Post.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
